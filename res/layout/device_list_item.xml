<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:gravity="center_vertical"
        android:layout_weight="0.75">

        <ImageView
            android:id="@+id/img_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth_4x" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_de_lst_itm_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_de_lst_itm_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_de_lst_itm_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:textColor="#000000" 
        android:layout_weight="0.25">

        <Button
            android:id="@+id/btn_de_lst_itm_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Connect"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_de_lst_itm_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Discon"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>