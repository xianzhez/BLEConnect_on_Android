<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sclV_hst_mgr_0"
        android:layout_width="match_parent"
        android:layout_height="200dp" 
        android:background="#aaaaaa"
        android:overScrollMode="always"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_hst_mgr_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Console" />

            <TextView
                android:id="@+id/txt_hst_mgr_1_console"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=" " />
            
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/proBar_hst_mgr_0"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询提取历史数据：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edt_hst_mgr_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="History data count"
            android:textSize="13sp"
            android:singleLine="true"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <CheckBox
            android:id="@+id/chkBox_hst_mgr_0"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:layout_weight="1.3"
            android:text="提取确认" />

        <Button
            android:id="@+id/btn_hst_mgr_0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:text="查询" />

        <Button
            android:id="@+id/btn_hst_mgr_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:text="提取" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中断历史数据传输：" />

        <Button
            android:id="@+id/btn_hst_mgr_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:textSize="13sp"
            android:text="确认" />

        <Button
            android:id="@+id/btn_hst_mgr_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:text="中断"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查询并清除存储指针：" />
        
        <Button
            android:id="@+id/btn_hst_mgr_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:text="查清" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看当前设备历史数据：" />
        
        <Button
            android:id="@+id/btn_hst_mgr_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:textSize="13sp"
            android:gravity="left|center_vertical"
            android:text="查看" />
    </LinearLayout>
    

</LinearLayout>